{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "@@@XNOTE.VERSION@@@",
  "author": "Lorenz Froihofer: support for TB >= 3.0, since Dec. 2009, Klaus BÃ¼cher since TB 78",
  "homepage_url": "https://github.com/xnotepp/xnote/wiki",
  "applications": {
    "gecko": {
      "id": "xnote@froihofer.net",
      "strict_min_version": "78.0",
      "strict_max_version": "78.*"
    }
  },
  "default_locale" : "en_US",

  "icons": {
    "32": "chrome/skin/icon32.png"
  },

  "browser_action": {
    "default_title": "XNote++",
    "default_icon": "chrome/skin/icon32.png"
	},

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": ["activeTab", "tabs", "messagesRead", "storage"],

  "background": {
    "scripts": ["xn-background.js"]
  },

  "experiment_apis": {
    "xnoteWindowListener": {
      "schema": "experiment-apis/WindowListener/windowlistener.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["xnoteWindowListener"]],
        "script": "experiment-apis/WindowListener/windowlistener.js"
      }
    },
    "xnoteUtilities": {
      "schema": "experiment-apis/Utilities/utilities.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["xnoteUtilities"]],
        "script": "experiment-apis/Utilities/utilities.js"
      
       }
    },
    "xnoteapi": {
      "schema": "experiment-apis/xnote/xnote-experiments.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["xnoteapi"]],
        "script": "experiment-apis/xnote/xnote-experiments.js"
       }
    },
    "xnotefiles": {
      "schema": "experiment-apis/files/files-api.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["xnotefiles"]],
        "script": "experiment-apis/files/files-api.js"
       }
    }
  }
}